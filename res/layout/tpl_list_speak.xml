<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tpl_list_speak"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants" >

    <!--RelativeLayout

        android:layout_height="wrap_content"
        android:layout_width="match_parent"-->

        <ImageView
            android:id="@+id/tpl_list_speak_iv_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@color/black"
            android:focusable="false"
            android:scaleType="fitCenter" />

        <com.app.demos.layout.MyTextView
            android:id="@+id/tpl_list_speak_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:focusable="false"
            android:gravity="center"
            android:paddingBottom="45dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:lineSpacingExtra="2dp"/>
            <!-- 行距 -->


    <LinearLayout
        android:id="@+id/tpl_list_speak_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignWithParentIfMissing="true"
        android:focusable="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp" >

        <TextView
            android:id="@+id/tpl_list_speak_tv_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            android:text="门"
            android:textColor="@color/lightwhite"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/tpl_list_speak_ib_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_card_like_grey"
            android:clickable="true"
            android:focusable="false" />

        <TextView
            android:id="@+id/tpl_list_speak_tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:textColor="@color/lightwhite"
            android:textSize="15dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#60000000"
        android:focusable="false"
         />


</RelativeLayout>
