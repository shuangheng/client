<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/tpl_list_speak_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="15.0dip"
                    android:textColor="@color/secret_card_view_linkify_text_1"
                    android:gravity="center_vertical"
                    android:id="@+id/tpl_list_speak_tv_type"
                    android:paddingLeft="@dimen/default_horizontal_margin"
                    android:paddingRight="@dimen/default_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="48.0dip" />

                <ImageView
                    android:id="@+id/tpl_list_speak_report"
                    android:paddingLeft="@dimen/default_horizontal_margin"
                    android:paddingRight="@dimen/default_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="48.0dip"
                    android:scaleType="center"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tpl_list_speak_speak_content_container"
                android:paddingLeft="@dimen/default_horizontal_margin"
                android:paddingRight="@dimen/default_horizontal_margin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/feed_card_content_text_size"
                    android:gravity="top|start|center"
                    android:id="@+id/tpl_list_speak_tv_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="8"
                    android:ellipsize="end"
                    android:lineSpacingExtra="0.0dip" />

                <TextView
                    android:textSize="15.0dip"
                    android:textColor="@color/secret_card_view_linkify_text_1"
                    android:id="@+id/tpl_list_speak_speak_all_content_tips"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/secret_all_content_tips"
                    android:layout_below="@id/tpl_list_speak_tv_content" />
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/tpl_list_speak_speak_image_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_horizontal_margin"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="@dimen/default_horizontal_margin">

                <ImageView
                    android:id="@+id/tpl_list_speak_iv_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:visibility="gone"
                    android:scaleType="centerCrop"
                    android:src="@drawable/message_placeholder_picture"
                    android:contentDescription="@null" />

                <RelativeLayout
                    android:id="@+id/tpl_list_speak_speak_loading_image"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        style="?android:attr/progressBarStyle" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/tpl_list_speak_speak_reload_image"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/ic_reload"
                    android:scaleType="center"
                    android:contentDescription="@null" />

            </FrameLayout>

            <RelativeLayout
                android:paddingBottom="4.0dip"
                android:layout_width="fill_parent"
                android:layout_height="52.0dip">

                <TextView
                    android:textSize="13.0dip"
                    android:gravity="center_vertical"
                    android:id="@+id/tpl_list_speak_speak_extra"
                    android:paddingLeft="@dimen/default_horizontal_margin"
                    android:paddingRight="@dimen/default_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true" />

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/tpl_list_speak_speak_like"
                    android:paddingLeft="@dimen/default_horizontal_margin"
                    android:paddingRight="@dimen/default_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:textSize="13.0dip"
                        android:gravity="center_vertical"
                        android:id="@+id/tpl_list_speak_tv_like"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" />

                    <ImageButton
                        android:id="@+id/tpl_list_speak_ib_like"
                        android:paddingLeft="4.0dip"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@null" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>