<?xml version="1.0" encoding="utf-8"?>
<com.app.demos.layout.ResizeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ui_speak_comment_ResizeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="?attr/actionBarSize"

        android:orientation="vertical">
        <ListView
            android:id="@+id/ui_speak_comment_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:descendantFocusability="blocksDescendants"
            android:divider="@null"
            android:dividerHeight="2dp"
            android:fadingEdge="vertical"
            android:fadingEdgeLength="1dp"
            android:listSelector="@drawable/xml_list_bg" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/ui_speak_comment_editLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:visibility="invisible">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_publish_operation_bar_keyboard"
            android:contentDescription="@null" />

        <com.app.demos.layout.materialEditText.MaterialEditText
            android:id="@+id/ui_speak_comment_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:maxLength="20"
            android:hint="@string/input_comment"
            android:textCursorDrawable="@drawable/text_cursor_cyan"
            app:met_typeface="fonts/Roboto-LightItalic.ttf"
            app:met_accentTypeface="fonts/Roboto-LightItalic.ttf"
            app:met_baseColor="@android:color/black"
            app:met_floatingLabel="highlight"
            android:layout_weight="1"
            app:met_primaryColor="?colorAccent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_send_btn_disabled" />

    </LinearLayout >

    <com.app.demos.layout.ButtonFloat
        android:id="@+id/ui_speak_comment_buttonFloat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:background="#1E88E5"
        materialdesign:animate="true"
        materialdesign:iconDrawable="@drawable/ic_action_new" />

    <include layout="@layout/toolbar" />

</com.app.demos.layout.ResizeLayout>
