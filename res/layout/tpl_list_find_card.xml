<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tpl_list_find_card_image_face"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="5dip"
            android:focusable="false"
            android:src="@drawable/face"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:orientation="vertical"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingBottom="8dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/tpl_list_find_card_images"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"/>

                <TextView
                    android:id="@+id/tpl_list_find_card_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="time"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tpl_list_find_card_where"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:focusable="false"
                    android:paddingLeft="12dip"
                    android:paddingRight="10dip"
                    android:text="loading"
                    android:textSize="10dip" />

                <TextView
                    android:id="@+id/tpl_list_find_card_clue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:focusable="false"
                    android:paddingLeft="12dip"
                    android:paddingRight="10dip"
                    android:text="@string/comment_reply"
                    android:textSize="10dip" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>