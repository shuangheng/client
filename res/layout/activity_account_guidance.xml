<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/account_guidance_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vpi="http://schemas.android.com/apk/res-auto">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout android:id="@+id/layout_button"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:paddingBottom="30.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:textColor="@android:color/white"
            android:background="@drawable/green_btn_bg"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="15.0dip"
            android:text="@string/join_now"
            android:layout_weight="1.0"
            android:onClick="clickOnRegister"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:textColor="@android:color/white"
            android:background="@drawable/white_translucent_btn_bg"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:layout_weight="1.0"
            android:onClick="clickOnLogin"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

    <!--com.viewpagerindicator.IconPageIndicator
        android:id="@id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40.0dip"
        android:layout_above="@id/layout_button"
        vpi:vpiIconPageIndicatorIconPadding="3.0dip" /-->
</RelativeLayout>