<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:minWidth="50dp"
            android:text="设置" />

        <TextView
            android:id="@+id/tpl_list_find_tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tpl_list_find_tvUptime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部" />

        <ImageButton
            android:id="@+id/ui_speak_main_ibRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/channel_filter_icon_selected" />
        
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ui_speak_main_fragmentLayout" >

        <fragment
            android:id="@+id/fragment_speak"
            android:name="com.app.demos.ui.fragment.SpeakFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

</LinearLayout>
