<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.app.demos.ui.UiActionBar" >

    <include layout="@layout/toolbar" />

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

            <!-- 内容界面 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <com.app.demos.layout.PagerSlidingTabStrip_my
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="48dip" >
                </com.app.demos.layout.PagerSlidingTabStrip_my>

                <android.support.v4.view.ViewPager
                    android:id="@+id/ui_actionbar_vPager"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#000000"
                    android:flipInterval="30"
                    android:persistentDrawingCache="animation" />
            </LinearLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/ui_actionbar_layout_add">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/s_9"
            android:visibility="visible"
            android:id="@+id/ui_actionbar_iv0" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/s_8"
            android:visibility="visible"

            android:id="@+id/ui_actionbar_iv1" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/s_3"
            android:visibility="visible"

            android:id="@+id/ui_actionbar_iv2" />
        </FrameLayout>
    <!--LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/ui_actionbar_tv"
            android:textSize="30dp"
            android:textColor="@color/red"
            android:background="@color/white"/>
    </LinearLayout -->



</RelativeLayout>

        <!-- 侧滑菜单内容 -->

        <LinearLayout
            android:id="@+id/drawer_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@drawable/s_1"
            android:orientation="vertical"
            android:padding="8dp" >

            <TextView
                android:id="@+id/drawer_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="富友凤飞飞string/app_name"/>
        </LinearLayout>


    </android.support.v4.widget.DrawerLayout>

</LinearLayout>

